# ===========================================
# AI Meeting Prep Agent - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit the .env file to git!

# --- Google Calendar API ---
# Download credentials.json from Google Cloud Console
# See docs/SETUP.md for step-by-step instructions
GOOGLE_CREDENTIALS_PATH=./credentials.json

# --- Microsoft Outlook + Teams (Optional) ---
# Register an app at https://portal.azure.com -> App Registrations
# Set enabled: true in config.yaml to activate
OUTLOOK_CLIENT_ID=your-azure-app-client-id

# --- Anthropic (Claude AI) ---
# Get your API key at: https://console.anthropic.com/settings/keys
# Sign up at console.anthropic.com for $5 free credit (~500 briefs)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxx

# --- Email (Gmail) ---
# Use a Gmail App Password, NOT your regular password
# See docs/SETUP.md#email-setup for instructions
EMAIL_SENDER=your-email@gmail.com
EMAIL_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx
EMAIL_RECIPIENT=your-email@gmail.com

# --- Optional ---
LOG_LEVEL=INFO
TIMEZONE=America/New_York
